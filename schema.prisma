// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model sample {
  id String @id
  name String
}

model Costumer {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  phone String @unique

  @@map("costumers")
}

model Product {
  id Int @id @default(autoincrement())
  name String
  price Int
  stock Int
  catergory String

  @@map("products")
}
